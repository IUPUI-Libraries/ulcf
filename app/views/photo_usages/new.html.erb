<h1 class="rvt-m-top-md">Photo Usage Submission Form</h1>

<% if current_user %>
  <%= render 'form', photo_usage: @photo_usage %>
<% else %>
  <div>
    <p>Please authenticate before submitting photo usage form.</p>
    <%= link_to "IU Login", user_cas_omniauth_authorize_path, class: "rvt-button rvt-button--primary", method: :post %>
  </div>
<% end %>
